<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg2"
    tools:context=".MainActivity2">

    <androidx.cardview.widget.CardView
        android:id="@+id/appDCard"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="70dp"
        android:layout_marginStart="40dp"
        android:backgroundTint="@color/orange"
        app:cardCornerRadius="30dp" >

        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="App Development"
            tools:ignore="HardcodedText" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/webDCard"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="70dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="40dp"
        android:backgroundTint="@color/orange"
        app:cardCornerRadius="30dp" >

        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Web Development"
            tools:ignore="HardcodedText" />
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/mlCard"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="270dp"
        android:layout_marginStart="40dp"
        android:backgroundTint="@color/orange"
        app:cardCornerRadius="30dp">

        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Machine Learning"
            tools:ignore="HardcodedText" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/aiCard"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="270dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="40dp"
        android:backgroundTint="@color/orange"
        app:cardCornerRadius="30dp">

        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Artificial Intelligence"
            tools:ignore="HardcodedText" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cybSecCard"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="470dp"
        android:layout_marginStart="40dp"
        android:backgroundTint="@color/orange"
        app:cardCornerRadius="30dp">

        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Cyber Security"
            tools:ignore="HardcodedText" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/blockChainCard"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="470dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="40dp"
        android:backgroundTint="@color/orange"
        app:cardCornerRadius="30dp">

        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Blockchain"
            tools:ignore="HardcodedText" />
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/btnContact"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="130dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="130dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:text="Contact Us"
        tools:ignore="HardcodedText" />

</RelativeLayout>